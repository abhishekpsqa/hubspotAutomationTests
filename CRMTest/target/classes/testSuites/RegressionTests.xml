<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Regression Tests" parallel = "tests" preserve-order="true">
  <test thread-count="5" name="Hub spot regression tests on chrome browser">
  <parameter name = "myBrowser" value = "chrome"/>
    <classes>
      <class name="com.crm.testcases.LoginTest"/>
      <class name="com.crm.testcases.ContactsTest"/>
	  <class name="com.crm.testcases.HomeTest"/>
      <class name="com.crm.testcases.CompaniesTest"/> 
    </classes>
  </test> <!-- Hub spot regression tests -->
  
  <test thread-count="5" name="Hub spot regression tests on firefox browser">
  <parameter name = "myBrowser" value = "FF"/>
    <classes>
      <class name="com.crm.testcases.LoginTest"/>
      <class name="com.crm.testcases.ContactsTest"/>
	  <class name="com.crm.testcases.HomeTest"/>
      <class name="com.crm.testcases.CompaniesTest"/> 
    </classes>
  </test> <!-- Hub spot regression tests -->
</suite> <!-- Regression Tests -->
